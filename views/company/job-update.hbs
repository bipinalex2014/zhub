<div class="nav-small" style="list-style-type: none;">
    <li class="nav-item">
        <a class="nav-link" href="/company/logout">Logout</a>
    </li>
</div>
<div class="container">

    <div class="row-lg-9">
        <div class="card shadow p-3 mb-5 bg-white rounded mt-5" style="width: 45rem;">
            <div class="col-lg-13">
                <form id="jobPostingForm" action="/company/job-update/{{data._id}}" method="POST">
                    <fieldset>
                        <div class="section postdetails p-5">
                            <h4>Update Your Job</h4>
                            
                            <div class="row form-group mb-5">
                                <label class="col-sm-3 label-title mb-3">Job Category<span
                                        class="required">*</span></label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" name="jobTitle" value="{{data.jobTitle}}"
                                    onkeydown="return false"    placeholder="ex, Human Resource Manager" required>
                                </div>
                            </div>
                            <div class="row form-group mb-5">

                                <label class="col-sm-3 label-title mb-2"> Posting Date </label>
                                <div class="col-sm-9">
                                    <input name="postDate" type="date" value="{{data.postDate}}"
                                        class="flatpickr flatpickr-input form-control active" id='checkin-date1' 
                                        onkeydown="return false" style="background-color:white" placeholder="select posting date {{data.postDate}}">
                                </div>

                            </div>
                            <div class="row form-group mb-5">

                                <label class="col-sm-3 label-title mb-2"> Closing Date </label>
                                <div class="col-sm-9">
                                    <input name="closeDate" type="date" value="{{data.closeDate}}"
                                        class="flatpickr flatpickr-input form-control active" id='checkin-date2'
                                         style="background-color:white" placeholder="select closing date {{data.closeDate}}">
                                </div>

                            </div>
                            <div class="row form-group mb-5">

                                <label class="col-sm-3 label-title mb-2"> Contact email </label>
                                <div class="col-sm-9">
                                    <input class="form-control" id="email" name="email" value="{{data.email}}" type="email" onchange="">
                                </div>

                            </div>
                            <div class="row form-group mb-5">

                                <label class="col-sm-3 label-title mb-2"> Brief Description </label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" id="textarea" name="description"
                                        placeholder="Write few lines about your jobs" rows="8">{{data.description}}</textarea>
                                </div>

                            </div>
                            <div class="row form-group mb-5">

                                <label class="col-sm-3 label-title mb-2"> Preferred Skills </label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" id="textarea" name="skills"
                                        placeholder="Write few lines about your jobs" rows="8">{{data.skills}}</textarea>
                                </div>

                            </div>
                          
                           
                            <div class="row" style="float: right;">
                                <div class="col-lg-4">
                                    <button type="submit" class="btn btn-success"
                                        style="width: 180px;height: 50px;">Update Your Job</button>
                                </div>
                            </div>


                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>