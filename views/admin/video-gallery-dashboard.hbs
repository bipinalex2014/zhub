<div class="container">
    <div class="row">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <a href="/admin/gallery/new-video/" class="button primary rounded-pill text-center">Create New</a>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <th>Sl</th>
                            <th>Title</th>
                            <th>Subtitle</th>
                            <th>No.of Photos</th>
                            <th>Options</th>
                        </thead>
                        <tbody>
                            {{#each videos}}
                            <tr>
                                <td></td>
                                <td>{{this.title}}</td>
                                <td>{{this.subtitle}}</td>
                                <td>{{this.count}}</td>
                                <td>
                                    {{#if this.active}}
                                    <a class="btn btn-sm btn-warning"
                                        href="/admin/gallery/disable-video-gallery/{{this._id}}">Disable</a>
                                    {{else}}
                                    <a class="btn btn-sm btn-info"
                                        href="/admin/gallery/enable-video-gallery/{{this._id}}">Enable</a>
                                    {{/if}}

                                    <a class="button danger"
                                        href="/admin/gallery/delete-video-gallery/{{this._id}}">Delete</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>