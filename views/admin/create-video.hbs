<div class="container">
    <div class="row mt-5">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form id="formCreateVideo" action="/admin/gallery/new-video" method="POST"
                        enctype="multipart/form-data">

                        <div class="form-group mt-2">
                            <label for="title">Title</label>
                            <input type="text" name="title" id="title" class="form-control">
                        </div>
                        <div class="form-group mt-2">
                            <label for="subtitle">Subtitle</label>
                            <input type="text" name="subtitle" id="subtitle" class="form-control">
                        </div>
                        <div class="form-group mt-2">
                            <label for="files">Files</label>
                            <input type="file" accept="video/*" name="videos" id="files" class="form-control" multiple>
                        </div>
                        <div class="form-group mt-2">
                            <button type="submit" name="" id="btnUpload" class="button primary rounded-pill"><i
                                    class="fas fa-upload"></i>&nbsp;&nbsp;Upload &nbsp; </i></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>