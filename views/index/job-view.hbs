<div class="row p-4 mt-1">


    <div class="card shadow" style="padding:0px;border-radius :10px;">
        <table class="table" id="tableCart">
            <thead style="background-color: rgb(94, 175, 12);width:auto;color:white">
                <tr style="height: 50px;vertical-align:middle;border:none">
                    {{!-- <th scope="col">#</th> --}}
                    <th scope="col">Job title</th>
                    <th scope="col">Company</th>
                    <th scope="col">Closing date</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr style="height: 50px;padding: 10px;vertical-align:middle;border-radius:4px">

                    <td id="tr1"><a class="border-bottom py-3" style="font-size: large;color:black;text-decoration:none"
                            href="">{{this.jobTitle}}</a></td>
                    <td id="tr2"><a class="border-bottom py-3" style="font-size: large;color:black;text-decoration:none"
                            href="">{{this.companyName}}</a></td>

                    <td id="tr3"><a class="border-bottom py-3"
                            style="font-size: large;color:black;text-decoration:none">{{this.closeDate}}</a></td>
                    <td id="tr4"><a href="/job-details/{{this._id}}" id="job-view-button"
                            class="btn btn-theme btn-lg btn-outline-success mx-auto p-1">View Details</a></td>

                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

 