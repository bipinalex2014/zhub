<div class="container">
    {{#each items}}
    {{#with this}}
    <div class="row mt-5">
        <div class="col-md-8">
            <h1>{{title}}</h1>
            <h4>{{subtitle}}</h4>
            <span class="small">{{timestamp}}</span>
            <div class="row">
                {{#each files}}
                <div class="col-md-4 mt-3">
                    <img class="img-fluid" src="/images/gallery/{{this}}" alt="{{this}}" />
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    {{/with}}
    {{/each}}
</div>